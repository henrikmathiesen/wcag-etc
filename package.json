{
  "name": "wcag-etc",
  "version": "1.0.0",
  "scripts": {
    "prestart": "npm run copy:indexhtml && npm run sass:dev",
    "start": "concurrently \"npm run sass:watch\" \"npm run serve\"",
    "copy:indexhtml": "copyfiles -f app/index.html bld",
    "sass:dev": "node-sass --source-map-embed --source-map-contents app/app.scss bld/app.css",
    "sass:prod": "node-sass --output-style compressed app/app.scss bld/app.css",
    "sass:watch": "onchange \"app/**/*.scss\" -- npm run sass:dev",
    "serve": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrikmathiesen/wcag-etc.git"
  },
  "homepage": "https://github.com/henrikmathiesen/wcag-etc#readme",
  "dependencies": {
    "compression": "1.6.2",
    "concurrently": "3.4.0",
    "copyfiles": "1.2.0",
    "express": "4.15.2",
    "foundation-sites": "6.3.1",
    "node-sass": "4.5.1",
    "onchange": "3.2.1"
  }
}
